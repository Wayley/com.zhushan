<view class="wrapper">
  <view class="publish">
    <view class="container publish-section">
      <view class="title">信息分类</view>
      <view class="tag-list">
        <view
          class="tag"
          wx:for="{{typeList}}"
          wx:key="id"
        >{{item.name}}</view>
      </view>
    </view>
    <view class="parting"></view>
    <view class="container publish-section">
      <view class="title">信息内容</view>
      <view class="form-wrp">
        <textarea placeholder="请输入您要发布的内容信息" />
      </view>
      <view class="title">电话号码</view>
      <view class="form-wrp">
        <input
          type="number"
          placeholder="请输入您的电话号码"
        />
      </view>
      <!-- 上传 -->
      <view class="publish-upload">
        <view
          class="uploaded-item"
          wx:for="{{uploadList}}"
          wx:key="id"
        >
          <image
            class="uploaded-img"
            src="{{item.url}}"
          ></image>
        </view>

        <view
          class="uploaded-item upload-btn"
          bindtap="uploadImg"
        >
          <icon
            type="clear"
            size="60"
            class="upload-icon"
          ></icon>
        </view>

      </view>
    </view>
    <view class="parting"></view>
    <view>
      <button
        type="primary"
        class="submit-btn"
      >立即发布</button>
    </view>
  </view>
</view>