<!--index.wxml-->
<view class="wrapper">
  <!-- 顶部搜索 -->
  <view class="container flex-wrp top-search">
    <view class="location">广州</view>
    <view class="search-entry">
      <icon
        class="icon-small"
        type="search"
        size="14"
      ></icon>
      请输入关键字...
    </view>
  </view>
  <!-- banner -->
  <view class="container banner swiper">
    <swiper
      indicator-dots="{{true}}"
      autoplay="{{true}}"
      interval="2000"
      duration="500"
    >
      <block
        wx:for="{{bannerList}}"
        wx:key="*this"
      >
        <swiper-item>
          <view class="swiper-item">
            <navigator
              url="{{item.url}}"
              hover-class="navigator-hover"
              open-type="switchTab"
            >
              <image
                class="kind-list-img"
                src="{{item.img}}"
              ></image>
            </navigator>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- menu -->
  <view class="container menu">
    <ul>
      <li
        wx:for="{{menuList}}"
        wx:key="{{item.id}}"
      >
        <navigator
          url="{{item.url}}"
          hover-class="navigator-hover"
        >
          <span class="icon {{item.iconClass}}"></span>
          <view class="name">{{item.name}}</view>
        </navigator>
      </li>
    </ul>
  </view>
  <view class="parting"></view>

  <!-- news_quick -->
  <view class="container news-quick">
    <view class="img">
      <navigator
        url="/pages/my/my"
        hover-class="navigator-hover"
        open-type="switchTab"
      >
        <image
          class="news-quick-img"
          src="/images/news_quick.png"
        ></image>
      </navigator>
    </view>
    <view class="cont">
      <text
        wx:for="{{recomNews}}"
        wx:key="{{item.id}}"
      >{{item.title}}</text>
    </view>
  </view>
  <view class="parting"></view>

  <!-- 最新消息 -->
  <view class="container">
    <view class="title">最新消息</view>
    <view class=""></view>
  </view>

  <!--  -->
  <view class="container userinfo">
    <button
      wx:if="{{!hasUserInfo && canIUse}}"
      open-type="getUserInfo"
      bindgetuserinfo="getUserInfo"
    > 获取头像昵称 </button>
    <block wx:else>
      <image
        bindtap="bindViewTap"
        class="userinfo-avatar"
        src="{{userInfo.avatarUrl}}"
        background-size="cover"
      ></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <view>
    <map
      longitude="深圳经度"
      latitude="深圳纬度"
    ></map>
  </view>
</view>