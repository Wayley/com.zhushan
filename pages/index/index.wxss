/**index.wxss**/
.top-search{
  height:50rpx;
  line-height: 50rpx;
}
.location{
  position: relative;
  padding-right: 25rpx;
  margin-right: 20rpx;
}
.location:before{
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  /* < */
  /* transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0); */
  /* > */
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  /* up */
  transform: matrix(0.71, -0.71, 0.71, 0.71, 0, 0);
  /* down */
  transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 0rpx;
}
.search-entry{
  flex: 1;
  background: #F4F4F4;
  border-radius: 50px;
  color: #808080;
  position: relative;
  padding-left: 28px;
}
.search-entry icon{
  position: absolute;
  left: 10px;
  top:6px;
}

/* banner */
